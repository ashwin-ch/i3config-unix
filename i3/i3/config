# Printscreen
bindsym Print exec scrot -e 'mv $f /tmp/ && gimp /tmp/$f'

#BOOT
set $mode_system System (l) lock, (e) logout, (s) suspend (r) reboot, (Shift+s) shutdown, (Esc) cancel
mode "$mode_system" {
    bindsym l exec --no-startup-id i3lock -c 000000, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Ctrl+q mode "$mode_system"

#popup during fullscreen
popup_during_fullscreen smart

#print screen binding
bindsym --release Print exec "scrot -m '$HOME/temp/%s_%H%M_%d.%m.%Y_$wx$h.png'"
bindsym --release Shift+Print exec "scrot -s '$HOME/temp/%s_%H%M_%d%m%Y_$wx$h.png'"
bindsym --release $mod+Shift+Print exec "scrot -u -d 4 '$HOME/temp/%s_%H%M_%d%m%Y_$wx$h.png'"

